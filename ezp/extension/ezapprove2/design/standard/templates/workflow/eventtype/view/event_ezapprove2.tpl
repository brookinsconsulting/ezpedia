<div class="element">
{"Sections"|i18n("design/standard/workflow/eventtype/view")}:

{section show=$event.selected_sections|contains(-1)}
    {"Any"|i18n("design/standard/workflow/eventtype/view")}
{section-else}
    {section var=section loop=$event.selected_sections}
        {delimiter}, {/delimiter}
        {fetch( 'section', 'object', hash( 'section_id',$section.item ) ).name|wash}
    {/section}
{/section}
</div>

